# grep
alias grep='grep --color=auto'
alias s='grep --exclude-dir=node_modules --exclude-dir=.git --exclude=*.log -rn'

# ls
if [ "$(uname)" = "Linux" ]; then
  alias ls='ls --color=auto'
  alias fd='fdfind'
elif [ "$(uname)" = "Darwin" ]; then
  alias ls='ls -G'
  alias fdfind='fd'
fi

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# g => git
alias g='git'

# cd
alias ..='cd ..'
alias ...='cd ../..'

# npm
alias n='npm run'

# workflows
alias pb='git push origin $(git rev-parse --abbrev-ref HEAD)'
alias pbf='pb --force'
alias vpkg='vim $(pkg)'
