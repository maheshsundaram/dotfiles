#!/bin/bash

# ===== SYSTEM DETECTION =====
is_mac() {
  [[ "$(uname -s)" == "Darwin" ]]
}

# ===== HISTORY SETTINGS =====
HISTCONTROL=ignoreboth
HISTSIZE=1000
HISTFILESIZE=2000
shopt -s histappend

# ===== TERMINAL SETTINGS =====
export TERM="xterm-256color"
shopt -s checkwinsize

# ===== MAC-SPECIFIC SETTINGS =====
if is_mac; then
  # Terminal colors for macOS
  CLICOLOR=true
  LSCOLORS=ExGxBxDxCxEgEdxbxgxcxd
  BASH_SILENCE_DEPRECATION_WARNING=1
  
  # Homebrew path (Apple Silicon)
  export PATH="/opt/homebrew/bin:$PATH"
  
  # Homebrew bash completion
  [[ -r "/opt/homebrew/etc/profile.d/bash_completion.sh" ]] && . "/opt/homebrew/etc/profile.d/bash_completion.sh"
else
  # Linux-specific settings
  # Bash completion for Linux
  source /usr/share/bash-completion/bash_completion
  source /usr/share/bash-completion/completions/git
fi

# ===== EDITOR SETTINGS =====
set -o vi
export VISUAL=vim
export EDITOR=vim
if type nvim > /dev/null 2>&1; then
  alias vim='nvim'
fi

# ===== PROMPT SETTINGS =====
PROMPT_SYMBOL="Î»"
PS1='\n\h \D{%F %T} \[\e[34m\]\w
$(__git_ps1 "%s") $PROMPT_SYMBOL \[\e[00m\]'

# ===== GIT SETTINGS =====
export GIT_PS1_SHOWDIRTYSTATE=1
export GIT_PS1_SHOWUNTRACKEDFILES=1
complete -o default -o nospace -F _git g

# ===== PATH SETTINGS =====
# User local binaries
export PATH="$HOME/.local/bin:$PATH"

# Deno
export PATH="$HOME/.deno/bin:$PATH"
export PATH="$HOME/.deno/env:$PATH"

# Rust/Cargo
export PATH="$PATH:$HOME/.cargo/bin"

# Neovim
export PATH="$PATH:$HOME/Downloads/nvim-macos-arm64/bin"

# pnpm
export PNPM_HOME="$HOME/Library/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

# ===== SOURCE FILES =====
# Load secrets
[ -s "$HOME/.secrets.sh" ] && \. "$HOME/.secrets.sh"

# Load aliases
[ -f ~/.bash_aliases ] && . ~/.bash_aliases

# Load git utilities
source ~/.git-prompt.sh
source ~/.git-completion.sh

# Load other utilities
source ~/.z.sh
source ~/.zz.sh
source ~/.find-package-json.sh
source ~/.git_fzf.sh

# Load fzf
[ -f ~/.fzf.bash ] && source ~/.fzf.bash

# Load fnm (Fast Node Manager)
eval "$(fnm env --use-on-cd)"
